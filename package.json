{
  "name": "site_checker_node",
  "version": "0.1.0",
  "description": "Checks sites",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src config",
    "mocha": "./node_modules/.bin/_mocha -R mocha-multi --reporter-options spec=-,xunit=test-results.xml src/*.test.js",
    "coverage": "nyc --all --reporter=lcov --reporter=text npm test && codecov",
    "test": "npm run lint && npm run mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/circleci/site_checker_node.git"
  },
  "author": "Joseph W Becher <joseph@drazisil.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/circleci/site_checker_node/issues"
  },
  "homepage": "https://github.com/circleci/site_checker_node#readme",
  "dependencies": {
    "async": "^2.1.4",
    "body-parser": "^1.16.0",
    "botkit": "^0.4.9",
    "cors": "^2.8.1",
    "ejs": "^2.5.5",
    "express": "^4.15.2",
    "express-partials": "^0.3.0",
    "express-session": "^1.14.2",
    "js-yaml": "^3.7.0",
    "jwt-simple": "^0.5.1",
    "method-override": "^2.3.7",
    "moment": "^2.17.1",
    "morgan": "^1.7.0",
    "node-json-db": "^0.7.3",
    "passport": "^0.3.2",
    "passport-github": "^1.1.0",
    "passport-github2": "^0.1.10",
    "request": "^2.79.0",
    "slack": "^8.1.2",
    "slackbots": "^1.0.2",
    "sqlite3": "^3.1.8",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.3"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "eslint": "^3.17.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.13.0",
    "mocha-multi": "^0.10.0",
    "nyc": "^10.1.2",
    "should": "^11.2.1",
    "standard": "^8.6.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ],
    "ignore": [
      "public/assets/*",
      "node-coverage/*"
    ]
  },
  "nyc": {
    "exclude": [
      "coverage/*",
      "src/index.js",
      "server.js",
      "test/*",
      "public/*",
      "node-coverage/*"
    ],
    "report-dir": "./node-coverage"
  }
}
