{
  "name": "site_checker_node",
  "version": "0.1.0",
  "description": "Checks sites",
  "main": "index.js",
  "scripts": {
    "test": "standard --verbose && mocha test/**/*.spec.js && nyc --all --reporter=html --reporter=text mocha test/**/*.spec.js --reporter mocha-junit-reporter --reporter spec --reporter mocha-junit-reporter"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/circleci/site_checker_node.git"
  },
  "author": "Joseph W Becher <joseph@drazisil.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/circleci/site_checker_node/issues"
  },
  "homepage": "https://github.com/circleci/site_checker_node#readme",
  "dependencies": {
    "async": "^2.1.4",
    "body-parser": "^1.16.0",
    "botkit": "^4.6.1",
    "cors": "^2.8.5",
    "ejs": "^3.0.1",
    "express-partials": "^0.3.0",
    "express-session": "^1.17.0",
    "js-yaml": "^3.13.1",
    "jwt-simple": "^0.5.3",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "node-json-db": "^1.0.3",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.11",
    "request": "^2.79.0",
    "slack": "^11.0.2",
    "slackbots": "^1.2.0",
    "sqlite3": "^4.1.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.0"
  },
  "devDependencies": {
    "jshint": "^2.9.4",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-multi": "^1.1.3",
    "nyc": "^14.1.1",
    "should": "^13.2.3",
    "standard": "^8.6.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ],
    "ignore": [
      "public/assets/*",
      "node-coverage/*"
    ]
  },
  "nyc": {
    "exclude": [
      "coverage/*",
      "src/index.js",
      "server.js",
      "test/*",
      "public/*",
      "node-coverage/*"
    ],
    "report-dir": "./node-coverage"
  }
}
